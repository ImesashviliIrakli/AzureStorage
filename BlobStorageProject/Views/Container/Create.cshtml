@model Container

<div class="container p-4">
    <h2 class="text-info mb-3">Create Category</h2>
    <form method="post" asp-action="Create">
        <div class="card p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Name" class="sr-only">Category Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Category Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info btn-block">Create</button>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-success btn-block">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
