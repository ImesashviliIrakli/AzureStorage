@model List<string>

<div class="container p-4 border">
    <div class="row">
        <div class="col-9">
            <h3>Container: @Context.Request.Query["containerName"].ToString()</h3>
        </div>
        <div class="col-3 text-right">
            <a asp-action="AddFile" asp-controller="Blob" asp-route-containerName="@Context.Request.Query["containerName"]" class="btn btn-success">Add Blob</a>
            <a asp-action="Index" asp-controller="Container" class="btn btn-info">Containers</a>
        </div>
    </div>

    <div class="container pt-4">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Image Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="ViewFile" asp-controller="Blob" target="_blank" asp-route-name="@item" asp-route-containerName="@Context.Request.Query["containerName"]">
                                @item
                            </a>
                        </td>
                        <td class="text-right">
                            <a asp-action="DeleteFile" asp-controller="Blob" asp-route-name="@item" asp-route-containerName="@Context.Request.Query["containerName"]" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
